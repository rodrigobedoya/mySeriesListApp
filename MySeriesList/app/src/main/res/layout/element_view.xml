<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/element_view_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="16dp">
    <TextView
        android:id="@+id/element_view_first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the first line"
        android:textSize="16sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/element_view_second_line"
        android:layout_below="@+id/element_view_first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the second line"
        android:textSize="14sp"/>
</RelativeLayout>